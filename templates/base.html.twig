<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>{% block title %}Добро пожаловать!{% endblock %}</title>

        <link rel="icon" type="image/png" href="/favicon.png">

        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,500,500i,600,600i&display=swap" rel="stylesheet" />
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="header">
            <h1 class="">
                <a href="/"><img src="/favicon.png" alt="icon" height="128px"/> Телеграм-бот</a>
            </h1>

            <nav class="navbar navbar-expand-xl navbar-light bg-light">
                <div class="container mt-4 mb-3">
                    <a class="navbar-brand me-4 pr-1" href="{{ path('admin_index') }}">
                        {{ ux_icon('bi:backspace-reverse', {style: 'height: 1em'}) }} Общая информация
                    </a>
                    <a class="navbar-brand me-4 pr-1" href="{{ path('admin_chats') }}">
                        {{ ux_icon('bi:backspace-reverse', {style: 'height: 1em'}) }} Чаты
                    </a>
                    <a class="navbar-brand me-4 pr-1" href="{{ path('admin_users') }}">
                        {{ ux_icon('bi:backspace-reverse', {style: 'height: 1em'}) }} Пользователи
                    </a>
                    <a class="navbar-brand me-4 pr-1" href="{{ path('admin_commands') }}">
                        {{ ux_icon('bi:backspace-reverse', {style: 'height: 1em'}) }} Комманды
                    </a>
                    <a class="navbar-brand me-4 pr-1" href="{{ path('admin_online') }}">
                        {{ ux_icon('bi:backspace-reverse', {style: 'height: 1em'}) }} Online
                    </a>
                </div>
            </nav>
        </header>

        <main role="main" class="container mt-5">
            {% block body %}{% endblock %}
        </main>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
