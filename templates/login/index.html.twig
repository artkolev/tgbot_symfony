{% extends 'base.html.twig' %}

{% block title %}Пожалуйста, авторизуйтесь!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="row" {{ stimulus_controller('login') }}>
        <div class="col-sm-5">
            <div class="well">
                <form action="{{ path('app_login') }}" method="post">
                    <fieldset>
                        <legend>{{ ux_icon('tabler:lock', {style: 'height: 1em'}) }}Пожалуйста, авторизуйтесь</legend>
                        <div class="form-group">
                            <label for="username">Email:</label>
                            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required>

                        </div>

                        <div class="form-group form-group-password">
                            <label for="password">Пароль:</label>
                            <input type="password" id="password" class="form-control" name="_password" required>
                        </div>

                        <div class="form-group">
                            <label>
                                <input type="checkbox" name="_remember_me" checked/>
                                Запомнить меня
                            </label>
                        </div>

                        <input type="hidden" name="_target_path" value="/admin">
                        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                        <button type="submit" class="btn btn-primary">
                            {{ ux_icon('tabler:login', {style: 'height: 1em'}) }} Войти
                        </button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
